
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Podaj przyjazne hasło"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textPassword" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/editTextPasswordIn" />
    <CheckBox
        android:text="Małe litery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxMale"
        android:checked="true" />
    <CheckBox
        android:text="Duże litery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxDuze"
        android:checked="true" />
    <CheckBox
        android:text="Cyfry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxCyfry"
        android:checked="true" />
    <CheckBox
        android:text="Znaki specjalne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxSpecjalne"
        android:checked="true" />

    <Button
        android:text="Konwertuj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonKonwert" />
    <TextView
        android:text="-"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textPasswordOut" />
    <Button
        android:text="Zapisz do schowka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSchowek" />

</LinearLayout>